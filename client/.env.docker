# Docker Environment Configuration
# Copy this to .env for docker-compose builds

# API URL (Node.js backend)
VITE_API_URL=http://localhost:3001

# Backend API URL (Python/FastAPI for analysis & conversion)
# For local development
VITE_BACKEND_API_URL=http://127.0.0.1:8000
# For production with AWS EC2
# VITE_BACKEND_API_URL=http://ec2-100-26-196-182.compute-1.amazonaws.com

# Application Environment
VITE_APP_ENV=production

# MCP Service Configuration
VITE_MCP_API_URL=http://localhost:3001
VITE_MCP_API_KEY=dev-key

# Feature Flags
VITE_ENABLE_ANALYTICS=false

# Support Configuration
VITE_SUPPORT_EMAIL=support@legacymodernization.com
